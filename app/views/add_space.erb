<div class="post-form">

  <h1>Please Add New Space</h1>

  <form action="/space" method="post">

    <div class="form">
      <label for="name">Space name</label>
      <input type="text" name="name" placeholder="Enter space name">
    </div>

    <div class="form">
      <label for="location">Location</label>
      <input type="text" name="location" placeholder="Enter space location">
    </div>

    <div class="form">
      <label for="description">Description</label>
      <textarea type="text" name="description" placeholder="Enter space description" rows="5"></textarea>
    </div>

    <div class="form">
      <label for="price">Price</label>
      <input type="text" name="price" placeholder="Enter space price">
    </div>

    <div class="form">
      <label for="available_from">Available From</label>
      <input type="date" name="available_from">
    </div>

    <div class="form">
      <label for="available_to">Available To</label>
      <input type="date" name="available_to">
    </div>

    <input type="submit" value="Add space" class="btn btn-primary">

  </form>

</div>
