<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <title>MakersBnb</title>
</head>
<body>
  <% if current_user %>
  <h4>Welcome <%= current_user.first_name %></h4>
  <% end %>
  <% if flash[:notice] %>
    <div id='notice'><%= flash[:notice] %></div>
  <% end %>
  <% if flash[:errors] && !flash[:errors].empty? %>
  <ul id='errors'>
    <% flash[:errors].each do |error| %>
    <li><%= error %></li>
    <% end %>
  </ul>
  <% end %>
  <%= yield %>
</body>
</html>
