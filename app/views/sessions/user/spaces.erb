<% if @user_spaces.count > 0 %>
  <ul id="spaces">
    <% @user_spaces.each do |space| %>
    <li>
      <%= space.name %><br>
      <p>Location: <%= space.location %></p>
      <p>Description: <%= space.description %></p>
      <p>Price: Â£<%= space.price %> per night</p>
      <p>Available from: <%= space.available_from.strftime("%A %d %b %Y") %></p>
      <p>Available to: <%= space.available_to.strftime("%A %d %b %Y") %></p>
      <form action="/space/edit" method="get">
        <input type="hidden" name="space_id" value="<%= space.id %>">
        <input type="submit" value="Edit space">
      </form>
      <form action="/space/delete" method="post">
        <input type="hidden" name="space_id" value="<%= space.id %>">
        <input type="submit" value="DELETE">
      </form>
    </li>
    <% end %>
  </ul>
<% else %>
  <h2>"You  don't have any spaces!"</h2>
<% end %>
